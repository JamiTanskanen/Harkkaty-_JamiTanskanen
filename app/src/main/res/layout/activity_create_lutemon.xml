<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateLutemonActivity">

    <Spinner
        android:id="@+id/spinner_lutemon_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/lutemon_colors" />

    <EditText
        android:id="@+id/edit_text_lutemon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lutemon Name" />

    <Button
        android:id="@+id/button_add_new_lutemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new Lutemon" />

</LinearLayout>
